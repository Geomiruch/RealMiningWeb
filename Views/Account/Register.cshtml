@model User_Story.Models.RegisterModel

@{
    ViewData["Title"] = "Реєстрація";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Minecraft Mods (Real-Mining)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Minecraft Mods (Real-Mining)</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("Moderator"))
                        {
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Moderator Page</a>
                            </li>
                        }

                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Files" asp-action="Index">Files</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">News</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Topics" asp-action="Index">Forums</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Guides" asp-action="Index">Guide</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="InstallationGuides" asp-action="Index">Installation Guide</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {

                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Details">Profile</a>
                            </li>
                            <li>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Sign out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Sign Up</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <h1>Registration</h1>
            <hr />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="RoleID" class="control-label">Role</label>
                            <select asp-for="RoleID" class="form-control" asp-items="ViewBag.Roles"></select>
                        </div>                
                        <div class="form-group">
                            <label asp-for="Login" class="control-label">Login</label><br />
                            <input type="text" asp-for="Login" class="form-control" />
                            <span asp-validation-for="Login" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label><br />
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label">Confirm password</label><br />
                            <input asp-for="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Avatar" class="control-label">Avatar</label><br />
                            <input type="file" name="file" value="" asp-for="Avatar" class="form-control"/>
                            <span asp-validation-for="Avatar" class="text-danger" />
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>     
                        <div class="form-group">
                            <input type="submit" value="Register" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>

     <footer class="border-top footer text-muted">
        <div class="container">
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>