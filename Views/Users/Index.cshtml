@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            @*<th>
                Login
            </th>
            <th>
                Password
            </th>*@
            <th>
                Avatar
            </th>
            <th>
                First Name
            </th>
