@model User_Story.Models.Topic

@{
    ViewData["Title"] = "Details";
}



<div>
    <h4>Topic</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

<h4>Message</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Messages" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Text</label>
                <input name="messageText" class="form-control" />
            </div>
            <div class="form-group" hidden>
                <label class="control-label"></label>
                <input name="topicId" type="number" value="@Model.ID"
                       class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Send message" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                Message Text
            </th>
            <th>
                Author
            </th>
            <th>
                Message Date Time
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Messages)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MessageText)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationDate)
                </td>
                <td>
                    @if (User.IsInRole("Moderator") || (User.Identity.IsAuthenticated && User.Identity.Name.Equals(item.User.Login)))
                    {
                        <p>
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </p>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
